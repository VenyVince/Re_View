<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.review.shop.repository.search.CommonSearchReviewMapper">

    <select id="searchReviews" resultType="com.review.shop.dto.search.header.HeaderSearchReviewDTO">
        <!--기본 검색 결과 -->
<!--        - CommonReview : nickname, content, rating / prd_name, prd_brand-->
        select r.content, r.rating, p.prd_name, p.prd_brand, u.nickname, u.baumann_id
        from review r
        join product p on r.product_id = p.product_id
        join user_table u on r.user_id = u.user_id
        where r.content like concat('%', #{keyword}, '%')
        <!--필터링 구현 ( 아직 미구현 )-->
        <if test="filter != null and filter != ''">
            AND rating &gt;= #{filter}
        </if>

        <!--정렬 구현-->
        <choose>
            <when test="sort == 'latest'">
                ORDER BY created_at DESC
            </when>
            <when test="sort == 'oldest'">
                ORDER BY created_at ASC
            </when>
            <when test="sort == 'rating_highest'">
                ORDER BY rating DESC
            </when>
            <when test="sort == 'rating_lowest'">
                Order BY rating ASC
            </when>
            <otherwise>
                ORDER BY created_at DESC
            </otherwise>
        </choose>
    </select>

</mapper>
