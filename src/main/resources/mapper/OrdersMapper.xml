<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.review.shop.repository.Orders.OrderMapper">

    <select id="getProductsByIds" resultType="com.review.shop.dto.orders.OrderCheckoutProductInfoDTO">
        SELECT
        p.product_id as prdId,
        pi.image_url as prdImage,
        p.prd_name as prdName,
        p.price as prdPrice
        FROM product p
        LEFT JOIN product_image pi ON p.product_id = pi.product_id
        WHERE p.product_id IN
        <foreach collection="productIds" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>


    <select id="getUserPoint" resultType="integer">
        SELECT
            POINT
        FROM
            USER_TABLE  WHERE
            USER_ID = #{userId}
    </select>

</mapper>